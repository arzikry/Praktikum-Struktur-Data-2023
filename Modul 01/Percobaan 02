/* Program : ptrl.c */
#include<stdio.h>
int main()
{
		int y, x = 87;    /*x dan y bertipe int*/
		int *px;          /*variabel pointer yang menunjuk ke data yang bertipe int */
		x = 87;
		px = &x;          /*px diisi dengan alamat dari variabel x*/
		y = *px;           /*y diisi dengan alamat dari variabel px*/
		
		printf("Alamat x = %p\n", &x);
		printf("isi px = %p\n", px);
		printf("Isi x = %d\n", x);
		printf("Nilai yang ditunjukkan oleh px = %d\n", *px);
		printf("Nilai y = %d\n", y);
}
